<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Estación Meteorológica</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f7fa;
      padding: 20px;
      color: #333;
    }
    h1 {
      text-align: center;
    }
    .grafico {
      max-width: 700px;
      margin: 20px auto;
    }
  </style>
</head>
<body>
  <h1>Mi Estación Meteorológica</h1>
  <p style="text-align:center;">Temperatura en vivo desde ThingSpeak</p>
  <div class="grafico">
    <canvas id="graficoTemperatura"></canvas>
  </div>

  <script>
    const channelID = "TU_CANAL_ID"; // <--- CAMBIÁ ESTO
    const readAPIKey = ""; // Dejalo vacío si tu canal es público

    async function obtenerDatos(field) {
      const url = `https://api.thingspeak.com/channels/${channelID}/fields/${field}.json?results=20${readAPIKey ? '&api_key=' + readAPIKey : ''}`;
      const res = await fetch(url);
      const data = await res.json();
      const labels = data.feeds.map(f => f.created_at.substring(11, 19));
      const valores = data.feeds.map(f => parseFloat(f[`field${field}`]));
      return { labels, valores };
    }

    async function cargarGrafico() {
      const { labels, valores } = await obtenerDatos(1); // field1 = temperatura

      new Chart(document.getElementById("graficoTemperatura"), {
        type: "line",
        data: {
          labels,
          datasets: [{
            label: "Temperatura (°C)",
            data: valores,
            borderColor: "red",
            backgroundColor: "rgba(255, 99, 132, 0.2)",
            fill: true,
            tension: 0.3
          }]
        },
        options: {
          responsive: true,
          scales: {
            y: { beginAtZero: false }
          }
        }
      });
    }

    cargarGrafico();
  </script>
</body>
</html>
